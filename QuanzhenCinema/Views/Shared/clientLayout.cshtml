<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>全真影院-@ViewBag.Title</title>

    <!--设置网页图标-->
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/logo.ico")" type=”image/x-icon” />
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/header_visitor.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/input.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/footer.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/index.css")" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="//cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="//cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("Head", false)
</head>
<body>
