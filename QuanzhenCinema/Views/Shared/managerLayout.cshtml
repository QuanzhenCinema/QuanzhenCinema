    <script src="@Url.Content("~/Scripts/morrisjs/morris.min.js")"></script>
    <script src="@Url.Content("~/Scripts/morris-data.js")"></script>

    <!-- Custom Theme JavaScript -->
    @*<script src="../dist/js/sb-admin-2.js"></script>*@
    <script src="@Url.Content("~/Scripts/sb-admin-2.js")"></script>
</body>
</html>
