        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div id="wrapper">
        <div class="navbar-default sidebar" role="navigation">
            <div class="nav logo">
                <a href=@Url.Action("index","Home")><span><img src=@Url.Content("~/Content/images/logo.png") /> </span></a>
            </div>
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href=@Url.Action("index","Manager")><i class="fa fa-dashboard fa-fw"></i>　Dashboard</a>
                    </li>
                    <li>
                        <a href="movies.html"><i class="fa fa-calendar fa-fw"></i>　电影排片</a>
                    </li>
                    <li>
                        <a href=@Url.Action("Edit","DISCOUNTs")><i class="fa fa-money fa-fw"></i>　折扣管理</a>
                    </li>
                    <li>
                        <a href=@Url.Action("Edit","SNACKs")><i class="fa fa-rmb fa-fw"></i>　周边销售</a>
                    </li>
                    <li>
                        <a href=@Url.Action("Edit","STAFFs")><i class="fa fa-cog fa-fw"></i>　员工管理</a>
                    </li>
                    <li>
                        <a href=@Url.Action("Edit","MEMBERs")><i class="fa fa-user fa-fw"></i>　会员管理</a>
                    </li>
                    <li>
                        <a href=@Url.Action("login","Default")><i class="fa fa-power-off fa-fw"></i>　退出系统</a>
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <div id="page-wrapper">
            <div class="row">
                <!--标题-->
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.pageTitle</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            @RenderBody()
        </div>
    <!-- jQuery -->
    @*<script src="../bower_components/jquery/dist/jquery.min.js"></script>*@
    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>

    <!-- Bootstrap Core JavaScript -->
    @*<script src="../../js/bootstrap.min.js"></script>*@
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    <!-- Metis Menu Plugin JavaScript -->
    @*<script src="../bower_components/metisMenu/dist/metisMenu.min.js"></script>*@
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    <!-- Morris Charts JavaScript -->
    @*<script src="../bower_components/raphael/raphael-min.js"></script>
    <script src="../bower_components/morrisjs/morris.min.js"></script>
    <script src="../js/morris-data.js"></script>*@
