@model IEnumerable<QuanzhenCinema.Models.DISCOUNT>

@{
    Layout = "~/Views/Shared/managerLayout.cshtml";
    ViewBag.Title = "折扣管理";
    ViewBag.pageTitle = "折扣管理";
}

<p>
    @Html.ActionLink("创建", "Create")
</p>
<table class="table">
    <tr>
        <th>
            折扣率
        </th>
        <th>
            编号
        </th>
        <th>
            开始日期
        </th>
        <th>
            有效期
        </th>
        <th>
            描述
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NUM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.START_DATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.REMAINING_DAY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRIPTION)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.DISCOUNT_ID }) |
            @Html.ActionLink("详情", "Details", new { id=item.DISCOUNT_ID }) |
            @Html.ActionLink("删除", "Delete", new { id=item.DISCOUNT_ID })
        </td>
    </tr>
}

</table>
